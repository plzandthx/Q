# =============================================================================
# Database (Supabase PostgreSQL)
# =============================================================================
# Get these from: Supabase Dashboard → Project Settings → Database
# Use the "Connection string" (URI) format with pooling for production
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# For Prisma migrations, use the direct connection (not pooled)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# =============================================================================
# Redis (Optional - Use Upstash for serverless Redis)
# =============================================================================
# Get from: upstash.com → Create Redis Database → Details
REDIS_URL="rediss://default:[password]@[endpoint].upstash.io:6379"

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"
SESSION_SECRET="your-session-secret-min-32-chars"

# Argon2 Settings
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# =============================================================================
# OAuth Providers
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-backend-url/api/auth/google/callback"

# =============================================================================
# Stripe (Payment Processing)
# =============================================================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# =============================================================================
# Application URLs
# =============================================================================
APP_URL="https://plzandthx.github.io/Q"
API_URL="https://your-backend-url.railway.app"
NODE_ENV="production"
PORT=3001

# =============================================================================
# Security
# =============================================================================
# 32-byte key for encrypting integration credentials
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
